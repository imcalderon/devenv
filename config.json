{
    "version": "1.0.0",
    "global": {
      "paths": {
        "data_dir": "${DEVENV_ROOT}/data",
        "logs_dir": "${DEVENV_ROOT}/data/logs",
        "backups_dir": "${DEVENV_ROOT}/data/backups",
        "state_dir": "${DEVENV_ROOT}/data/state",
        "modules_dir": "${DEVENV_ROOT}/modules"
      },
      "modules": {
        "order": [
          "zsh",
          "python",
          "git",
          "vscode",
          "docker",
          "conda"
        ],
        "defaults": {
          "backup": {
            "enabled": true,
            "retention_days": 30
          },
          "logging": {
            "level": "INFO",
            "rotation_days": 7,
            "max_size": "10M"
          }
        }
      }
    },
    "platforms": {
      "linux": {
        "script": "devenv.sh",
        "shell": "/bin/bash",
        "paths": {
          "script_dir": "${DEVENV_ROOT}/lib"
        },
        "modules": {
          "overrides": {
            "zsh": {
              "enabled": true,
              "shell": {
                "paths": {
                  "config_dir": "${DEVENV_ROOT}/data/zsh"
                }
              }
            },
            "vscode": {
              "enabled": true,
              "shell": {
                "paths": {
                  "config_dir": "${DEVENV_ROOT}/data/vscode"
                }
              }
            }
          }
        }
      },
      "darwin": {
        "script": "devenv.sh",
        "shell": "/bin/bash",
        "paths": {
          "script_dir": "${DEVENV_ROOT}/lib"
        },
        "modules": {
          "overrides": {
            "zsh": {
              "enabled": true,
              "shell": {
                "paths": {
                  "config_dir": "${DEVENV_ROOT}/data/zsh"
                }
              }
            },
            "vscode": {
              "enabled": true,
              "shell": {
                "paths": {
                  "config_dir": "${DEVENV_ROOT}/data/vscode"
                }
              }
            }
          }
        }
      },
      "windows": {
        "script": "devenv.ps1",
        "shell": "powershell",
        "wsl": {
          "enabled": true,
          "distribution": "Ubuntu-20.04",
          "use_wsl": true,
          "mount_paths": {
            "data_dir": "${DEVENV_ROOT}/data"
          }
        },
        "paths": {
          "script_dir": "${DEVENV_ROOT}/lib/windows",
          "vscode": {
            "config_dir": "${DEVENV_ROOT}/data/vscode"
          }
        },
        "modules": {
          "overrides": {
            "zsh": {
              "enabled": false
            },
            "powershell": {
              "enabled": true,
              "shell": {
                "paths": {
                  "profile_dir": "${DEVENV_ROOT}/data/powershell"
                }
              }
            },
            "git": {
              "enabled": true,
              "git": {
                "config": {
                  "user.name": "Ivan Calderon",
                  "user.email": "imcalderon@users.noreply.github.com"
                }
              }
            }
          }
        }
      }
    },
    "user": {
      "name": "Ivan Calderon",
      "email": "imcalderon@users.noreply.github.com",
      "preferences": {
        "theme": "dark",
        "editor": "vscode",
        "terminal": "windows-terminal"
      }
    }
  }