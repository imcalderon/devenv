{
  "name": "VFX Platform",
  "description": "VFX Platform development and build environment",
  "version": "1.0.0",
  "modules": {
    "linux": ["zsh", "git", "docker", "python", "conda", "vfx"],
    "darwin": ["zsh", "git", "docker", "python", "conda", "vfx"]
  },
  "scaffold": "vfx",
  "variables": {
    "VFX_PLATFORM_YEAR": "2024",
    "CXX_STANDARD": "17",
    "PYTHON_VERSION": "3.11",
    "IMATH_VERSION": "3.1.9",
    "OPENEXR_VERSION": "3.2.1",
    "BOOST_VERSION": "1.82.0",
    "TBB_VERSION": "2020.3",
    "USD_VERSION": "24.03"
  },
  "toolkits": ["vfx-bootstrap"],
  "post_init": [
    "conda run -n vfx-build python -m builder.cli list"
  ]
}
