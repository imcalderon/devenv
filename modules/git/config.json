{
    "enabled": true,
    "runlevel": 2,
    "platforms": {
        "windows": {
            "enabled": true,
            "git": {
                "config": {
                    "core.autocrlf": "true",
                    "core.editor": "code --wait",
                    "core.pager": "",
                    "credential.helper": "manager"
                }
            }
        }
    },
    "backup": {
        "paths": [
            "$HOME/.gitconfig",
            "$HOME/.ssh/config",
            "$HOME/.ssh/id_ed25519",
            "$HOME/.ssh/id_ed25519.pub",
            "$HOME/.config/zsh/git.zsh"
        ]
    },
    "shell": {
        "paths": {
            "ssh_dir": "$HOME/.ssh",
            "git_config": "$HOME/.gitconfig",
            "zsh_config_dir": "$HOME/.config/zsh"
        },
        "aliases": {
            "git": {
                "g": "git",
                "ga": "git add",
                "gaa": "git add --all",
                "gst": "git status -sb",
                "gc": "git commit -v",
                "gc!": "git commit -v --amend",
                "gp": "git push",
                "gb": "git branch",
                "gco": "git checkout",
                "gd": "git diff",
                "gl": "git log",
                "glg": "git log --graph --decorate --oneline",
                "gf": "git fetch",
                "grb": "git rebase",
                "gm": "git merge",
                "gr": "git remote",
                "grs": "git reset",
                "gcl": "git clone"
            }
        }
    },
    "git": {
        "config": {
            "user.name": "",
            "user.email": "",
            "core.editor": "vim",
            "init.defaultBranch": "main",
            "pull.rebase": "false",
            "push.autoSetupRemote": "true",
            "help.autocorrect": "1",
            "color.ui": "auto",
            "core.autocrlf": "input",
            "core.pager": "less -FRX",
            "credential.helper": "cache --timeout=3600"
        },
        "ssh": {
            "key_type": "ed25519",
            "hosts": [
                {
                    "host": "github.com",
                    "user": "git",
                    "identity_file": "$HOME/.ssh/id_ed25519"
                }
            ]
        },
        "zsh_integration": {
            "enabled": true,
            "completion": true,
            "prompt": true,
            "aliases": true,
            "keyboard_shortcuts": true
        }
    }
}