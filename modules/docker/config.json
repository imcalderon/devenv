{
    "enabled": true,
    "runlevel": 2,
    "backup": {
      "paths": [
        "/etc/docker/daemon.json",
        "${DEVENV_ROOT}/data/docker",
        "${DEVENV_ROOT}/data/bin/devenv-container"
      ]
    },
    "shell": {
      "paths": {
        "data_dir": "${DEVENV_ROOT}/data/docker",
        "container_dir": "${DEVENV_ROOT}/data/docker/containers",
        "bin_dir": "${DEVENV_ROOT}/data/bin"
      },
      "aliases": {
        "basic": {
          "d": "docker",
          "dc": "docker compose",
          "dcu": "docker compose up -d",
          "dcd": "docker compose down",
          "dcl": "docker compose logs -f"
        },
        "container": {
          "di": "docker images",
          "dps": "docker ps",
          "dpsa": "docker ps -a",
          "dex": "docker exec -it",
          "dlog": "docker logs -f",
          "dst": "docker stats"
        },
        "cleanup": {
          "dprune": "docker system prune -f",
          "dvprune": "docker volume prune -f",
          "dclean": "docker system prune -af --volumes",
          "diprune": "docker image prune -f"
        }
      }
    },
    "docker": {
      "daemon": {
        "log-driver": "json-file",
        "log-opts": {
          "max-size": "10m",
          "max-file": "3"
        }
      },
      "wsl": {
        "enabled": true,
        "docker_desktop_socket": "/var/run/docker-desktop.sock",
        "daemon_config": {
          "hosts": [
            "unix:///var/run/docker.sock",
            "unix:///var/run/docker-desktop.sock"
          ]
        }
      }
    },
    "container": {
      "enabled": true,
      "strategy": "selective",
      "default_mounts": {
        "home": "${HOME}:/home/user",
        "devenv": "${DEVENV_ROOT}:/devenv",
        "docker": "/var/run/docker.sock:/var/run/docker.sock"
      },
      "default_network": "bridge",
      "default_user": "user"
    }
  }