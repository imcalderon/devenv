{
    "enabled": true,
    "runlevel": 2,
    "backup": {
      "paths": [
        "${DEVENV_DATA_DIR}/python/config/pylintrc",
        "${DEVENV_DATA_DIR}/python/config/pyproject.toml",
        "${DEVENV_DATA_DIR}/python/config/flake8"
      ]
    },
    "shell": {
      "paths": {
        "config_dir": "${DEVENV_DATA_DIR}/python/config",
        "bin_dir": "${DEVENV_DATA_DIR}/python/bin",
        "venv_dir": "${DEVENV_DATA_DIR}/python/venv"
      },
      "aliases": {
        "python": {
          "py": "python3",
          "ipy": "ipython",
          "pylab": "ipython --pylab",
          "jlab": "jupyter lab"
        },
        "tools": {
          "lint": "pylint",
          "fmt": "black",
          "mypy": "mypy",
          "pytest": "pytest -v"
        }
      }
    },
    "python": {
      "version": "3.10",
      "packages": {
        "development": [
          "ipython",
          "jupyter",
          "jupyterlab",
          "notebook"
        ],
        "build": [
          "build",
          "twine",
          "setuptools",
          "wheel",
          "pip"
        ],
        "linting": [
          "black",
          "pylint",
          "flake8",
          "mypy",
          "isort",
          "bandit"
        ],
        "testing": [
          "pytest",
          "pytest-cov",
          "pytest-benchmark",
          "tox"
        ]
      },
      "config": {
        "pylint": {
          "disable": [
            "C0111",
            "C0103"
          ],
          "max-line-length": 100,
          "good-names": [
            "i",
            "j",
            "k",
            "ex",
            "Run",
            "_"
          ]
        },
        "black": {
          "line-length": 100,
          "target-version": [
            "py310"
          ]
        },
        "flake8": {
          "max-line-length": 100,
          "ignore": [
            "E203",
            "W503"
          ]
        }
      }
    },
    "platforms": {
      "linux": {
        "enabled": true,
        "package": {
          "manager": "apt",
          "name": "python3",
          "packages": [
            "python3",
            "python3-pip",
            "python3-venv"
          ]
        }
      }
    }
  }