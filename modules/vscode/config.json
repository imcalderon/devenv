{
    "enabled": true,
    "runlevel": 2,
    "backup": {
        "paths": [
            "$HOME/.vscode-server/data/Machine/settings.json",
            "$HOME/.bashrc.d/vscode.sh"
        ]
    },
    "shell": {
        "paths": {
            "config_dir": "$HOME/.vscode-server/data/Machine",
            "extensions_dir": "$HOME/.vscode-server/extensions",
            "windows_vscode": "/mnt/c/Program Files/Microsoft VS Code/bin/code.cmd",
            "windows_scripts_dir": "$HOME/.devenv/windows_scripts"
        },
        "aliases": {
            "editor": {
                "code.": "code .",
                "code-win": "powershell.exe code",
                "code-wsl": "code",
                "code-proj": "code ~/Projects"
            }
        }
    },
    "vscode": {
        "windows": {
            "wsl_integration": true,
            "polling_interval": 5000,
            "remote_user": "wsl-user"
        },
        "extensions": [
            "ms-vscode-remote.remote-wsl",
            "ms-python.python",
            "ms-python.vscode-pylance",
            "ms-toolsai.jupyter",
            "eamodio.gitlens",
            "esbenp.prettier-vscode",
            "editorconfig.editorconfig",
            "ms-azuretools.vscode-docker",
            "dbaeumer.vscode-eslint",
            "bradlc.vscode-tailwindcss"
        ],
        "settings": {
            "workbench.colorTheme": "Default Dark Modern",
            "terminal.integrated.defaultProfile.linux": "bash",
            "terminal.integrated.profiles.linux": {
                "bash": {
                    "path": "/bin/bash",
                    "args": [
                        "-l"
                    ],
                    "icon": "terminal-bash"
                }
            },
            "terminal.integrated.fontFamily": "'MesloLGM Nerd Font'",
            "terminal.integrated.fontSize": 14,
            "terminal.integrated.enableBell": false,
            "terminal.integrated.copyOnSelection": true,
            "terminal.integrated.cursorBlinking": true,
            "terminal.integrated.cursorStyle": "line",
            "terminal.integrated.persistentSessionReviveProcess": "never",
            "terminal.integrated.tabs.enabled": true,
            "terminal.integrated.gpuAcceleration": "on",
            "remote.WSL.fileWatcher.polling": true,
            "remote.WSL.fileWatcher.pollingInterval": 5000,
            "python.defaultInterpreterPath": "/usr/bin/python3",
            "python.linting.enabled": true,
            "python.linting.pylintEnabled": true,
            "python.linting.pylintPath": "/home/wsl-user/.local/bin/pylint",
            "python.formatting.provider": "black",
            "python.formatting.blackPath": "/home/wsl-user/.local/bin/black",
            "python.formatting.blackArgs": [
                "--line-length",
                "100"
            ],
            "python.condaPath": "/home/wsl-user/miniconda3/bin/conda",
            "python.terminal.activateEnvironment": true,
            "editor.formatOnSave": true,
            "editor.codeActionsOnSave": {
                "source.organizeImports": true
            },
            "python.analysis.typeCheckingMode": "basic",
            "python.testing.pytestEnabled": true,
            "python.testing.unittestEnabled": false,
            "python.testing.nosetestsEnabled": false,
            "telemetry.telemetryLevel": "off",
            "update.mode": "none",
            "files.associations": {
                "*.spec": "python",
                "SConscript": "python",
                "SConstruct": "python"
            }
        }
    }
}